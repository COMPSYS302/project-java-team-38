<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WatchListActivity">

    <RelativeLayout
        android:id="@+id/top_bar_create_profile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/back_watchList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginStart="15dp"
            android:clickable="true"
            android:focusable="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCarListings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar_create_profile" />


    <LinearLayout
        android:id="@+id/bottomMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/grey"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:weightSum="6"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/homeButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/baseline_home_24"
            android:text="Home"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:textColor="@color/text_selector" />
        <Button
            android:id="@+id/plusButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/baseline_add_24"
            android:text="Create Listing"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:textColor="@color/text_selector" />
        <Button
            android:id="@+id/watchlistmenu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_add_shopping_cart_24"
            android:text="Watchlist"
            android:background="@color/backgroundPurple"
            android:textColor="@color/text_selector" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>